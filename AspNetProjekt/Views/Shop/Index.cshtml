@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model IEnumerable<AspNetProjekt.Models.Item>
@inject UserManager<MyUser> UserManager
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Sklep";
}

@if (TempData["AddedToCart"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
                toastr.options = {
          "closeButton": false,
          "debug": false,
          "newestOnTop": false,
          "progressBar": false,
          "positionClass": "toast-bottom-right",
          "preventDuplicates": false,
          "onclick": null,
          "showDuration": "300",
          "hideDuration": "5000",
          "timeOut": "3000",
          "extendedTimeOut": "1000",
          "showEasing": "swing",
          "hideEasing": "linear",
          "showMethod": "fadeIn",
          "hideMethod": "fadeOut"
        }

                toastr.info('Dodano do koszyka')
    </script>
}
<p>
    @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdmin")).Succeeded)
    {
        <a class="btn btn-primary" asp-action="CreateItem">Dodaj nowy produkt</a>
        <a class="btn btn-primary" asp-action="CreateCategory">Dodaj nową Kategorię</a>
    }
</p>
<div class="container">
    <div class="row row-cols-3 card-deck">

        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card mb-4" style="width: 18rem;">
                    @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdmin")).Succeeded)
                    {
                        <a asp-action="EditItem" asp-route-id="@item.ItemId" style="position:absolute" class="btn btn-danger d-inline-block m-1">edit</a>

                    }
                    @if (String.IsNullOrEmpty(item.ItemImageName))
                    {
                        <img class="card-img-top" width="220" height="220" style="max-height:260;max-width:260" src="~/image/noimage.jpg" asp-append-version="true" />
                    }
                    else
                    {
                        <img class="card-img-top" width="220" height="220" style="max-height:260;max-width:260" src="@("~/image/"+item.ItemImageName)" asp-append-version="true" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.ItemName)</h5>
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.ItemPrice) zł</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.ItemDescription)</p>
                        <p class="card-text">iloś w magazynie: @Html.DisplayFor(modelItem => item.ItemAvalibility)</p>
                    @if ((await AuthorizationService.AuthorizeAsync(User, "RequireUser")).Succeeded)
                        {
                            <a href="#" class="btn btn-primary d-inline-block ">like</a>
                            <a href="#" class="btn btn-secondary d-inline-block">Lista życzeń</a>
                            <a onclick="AddItemToCart('@item.ItemId')" class="btn btn-danger d-inline-block">Koszyk</a>
                        }
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script>
    function AddItemToCart(str) {
      var request = new XMLHttpRequest();
      request.onreadystatechange = function() {
      };
      var url = "/Cart/AddToShoppingCart";
      request.open("POST", url, false);
      request.setRequestHeader("Content-Type", "application/json");
      request.onreadystatechange = function () {
        if (request.readyState == 4 && request.status == 200) {
            location.reload(true);
        }
      };
    request.send(JSON.stringify(str));
    }
</script>